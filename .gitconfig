[user]
	name = geloman
	email = geloman-likes-rust@users.noreply.github.com

[init]
	defaultBranch = main

[core]
	editor = nvim
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
    dark = true
    syntax-theme = Coldark-Dark
    side-by-side = false
    navigate = true
    line-numbers = true
    plus-style = "#98bb6c" bold "#2b3328"
    minus-style = "#c34043" bold "#43242b"
    line-numbers-zero-style = "#dcd7ba"
    line-numbers-minus-style = "#c34043" bold
    line-numbers-plus-style = "#76946a" bold
    file-style = "#dcd7ba"
    file-decoration-style = "#dcd7ba" ul
    hunk-header-style = omit
    hunk-header-decoration-style = ul
    hunk-header-file-style =  "#dcd7ba"
    hunk-header-number-line-style =  "#dcd7ba"

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
	tool = vimdiff

[fetch]
	prune = true

[color]
	status = auto
	ui = true

[color "status"]
	added = green
	deleted = red
	changed = red
	untracked = cyan
